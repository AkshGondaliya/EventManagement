@model IEnumerable<EventManagement.Models.Registration>

@{
    ViewData["Title"] = "My Registrations";
}

<div class="container">
    <div class="form-card" style="max-width: 900px; margin-top: 2rem;">
        <h1 style="text-align:center;">My Registrations</h1>
        <table class="table" style="margin-top: 2rem; color: var(--text-primary);">
            <thead>
                <tr>
                    <th>Event Title</th>
                    <th>Event Date</th>
                    <th>Registration Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reg in Model)
                {
                    <tr>
                        <td>@reg.Event.Title</td>
                        <td>@reg.Event.EventDateTime.ToString("g")</td>
                        <td>@reg.RegistrationDate.ToString("g")</td>
                        <td>
                            <form asp-action="CancelRegistration" method="post">
                                <input type="hidden" name="registrationId" value="@reg.RegistrationId" />
                                <button type="submit" class="btn btn-secondary" style="padding: 0.4rem 0.8rem;">Cancel</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>