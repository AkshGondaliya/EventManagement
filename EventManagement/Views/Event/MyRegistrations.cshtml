@model IEnumerable<EventManagement.Models.Registration>

@{
    ViewData["Title"] = "My Registrations";
}

<div class="container my-5">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">My Registrations</h1>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Event Title</th>
                        <th>Event Date</th>
                        <th>Registration Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reg in Model)
                    {
                        <tr>
                            <td>@reg.Event.Title</td>
                            <td>@reg.Event.EventDateTime.ToString("g")</td>
                            <td>@reg.RegistrationDate.ToString("g")</td>
                            <td>
                                <a asp-action="ViewTicket" asp-route-id="@reg.RegistrationId" class="btn btn-sm btn-primary" target="_blank">View Ticket</a>
                                <form asp-action="CancelRegistration" method="post">
                                    <input type="hidden" name="registrationId" value="@reg.RegistrationId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Cancel</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>