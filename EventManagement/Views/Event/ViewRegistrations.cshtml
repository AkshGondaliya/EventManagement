@model EventManagement.Models.Event

@{
    ViewData["Title"] = "Registration List";
}

<div class="container my-5">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center">Registrations for "@Model.Title"</h1>
            <p class="text-center text-muted mb-4">
                Total Registrations: @Model.Registrations.Count() / @Model.MaxParticipants
            </p>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Participant</th>
                        <th>Email</th>
                        <th>Registration Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var registration in Model.Registrations)
                    {
                        <tr>
                            <td>
                                <img src="@(registration.User.ProfilePictureUrl ?? "/images/default-avatar.png")" class="attendee-avatar" alt="Attendee Avatar" />
                                @registration.User.FullName
                            </td>
                            <td>@registration.User.Email</td>
                            <td>@registration.RegistrationDate.ToString("g")</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="text-center mt-4">
                <a asp-action="MyCreatedEvents" class="btn btn-secondary">Back to My Events</a>
            </div>
        </div>
    </div>
</div>