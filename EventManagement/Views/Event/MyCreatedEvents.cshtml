@model IEnumerable<EventManagement.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<div class="container my-5">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">My Events</h1>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Event Title</th>
                        <th>Event Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ev in Model)
                    {
                        <tr>
                            <td>@ev.Title</td>
                            <td>@ev.EventDateTime.ToString("g")</td>
                            <td>@ev.Status</td>
                            <td>
                                @if(ev.Status == "Approved")
                                {
                                    <a asp-action="ViewRegistrations" asp-route-id="@ev.EventId" class="btn btn-sm btn-outline-light">View Registrations</a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>