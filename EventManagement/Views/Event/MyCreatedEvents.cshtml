@model IEnumerable<EventManagement.Models.Event>

@{
    ViewData["Title"] = "My Created Events";
}

<div class="container">
    <div class="form-card" style="max-width: 900px; margin-top: 2rem;">
        <h1 style="text-align:center;">My Created Events</h1>
        <table class="table" style="margin-top: 2rem; color: var(--text-primary);">
            <thead>
                <tr>
                    <th>Event Title</th>
                    <th>Event Date</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>
                        <td>@ev.Title</td>
                        <td>@ev.EventDateTime.ToString("g")</td>
                        <td>@ev.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>