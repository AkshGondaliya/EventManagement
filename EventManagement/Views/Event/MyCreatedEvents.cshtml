@model IEnumerable<EventManagement.Models.Event>

@{
    ViewData["Title"] = "My Events";
}

<div class="container my-5">
    @if (TempData["Notification"] != null)
    {
        <div class="alert alert-danger">@TempData["Notification"]</div>
    }

    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">My Events</h1>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Event Title</th>
                        <th>Event Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ev in Model)
                    {
                        <tr>
                            <td>@ev.Title</td>
                            <td>@ev.EventDateTime.ToString("g")</td>
                            <td>@ev.Status</td>
                            <td>
                                @if(ev.Status == "Approved")
                                {
                                    <a asp-action="ViewRegistrations" asp-route-id="@ev.EventId" class="btn btn-sm btn-outline-light">View Registrations</a>
                                }
                                <a asp-action="Edit" asp-route-id="@ev.EventId" class="btn btn-sm btn-outline-light">Edit</a>
                                <form asp-action="Delete" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this event?');">
                                    <input type="hidden" name="eventId" value="@ev.EventId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>