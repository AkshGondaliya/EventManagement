@model EventManagement.ViewModels.EventViewModel
@{
    var userRole = Context.Session.GetString("Role");
    var pageTitle = userRole == "Admin" ? "Create a New Event" : "Request a New Event";
    var buttonText = userRole == "Admin" ? "Create Event" : "Submit for Approval";
    ViewData["Title"] = pageTitle;
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark text-white">
                <div class="card-body p-4 p-md-5">
                    <h1 class="card-title text-center mb-4">Request a New Event</h1>
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Event Title</label>
                            <input asp-for="Title" class="form-control" placeholder="What is the name of your event?" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" placeholder="Tell us more about the event" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Venue" class="form-label"></label>
                            <input asp-for="Venue" class="form-control" placeholder="e.g., College Auditorium" />
                            <span asp-validation-for="Venue" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" placeholder="e.g., Workshop, Competition, Seminar" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EventDateTime" class="form-label">Date and Time</label>
                                <input asp-for="EventDateTime"
                                       class="form-control"
                                       type="datetime-local"
                                       min="@DateTime.Now.AddDays(1).ToString("yyyy-MM-ddTHH:mm")"
                                       value="@DateTime.Now.AddDays(1).ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="EventDateTime" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxParticipants" class="form-label">Maximum Participants</label>
                                <input asp-for="MaxParticipants" class="form-control" type="number" placeholder="e.g., 50" />
                                <span asp-validation-for="MaxParticipants" class="text-danger"></span>
                            </div>
                        </div>
                         <div class="mb-3">
                            <label asp-for="Fees" class="form-label">Registration Fee ($)</label>
                            <input asp-for="Fees" class="form-control" type="number" step="0.01" placeholder="0.00 for free" />
                            <span asp-validation-for="Fees" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg mt-3">@buttonText</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}