@model EventManagement.Models.Event
@{
    ViewData["Title"] = "Request a New Event";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark text-white">
                <div class="card-body p-4 p-md-5">
                    <h1 class="card-title text-center mb-4">Request a New Event</h1>
                    <form asp-action="Create" method="post">
                        <div class="input-group">
                            <input asp-for="Title" class="form-control" placeholder="Event Title" required />
                            <i class="fa-solid fa-heading"></i>
                        </div>
                        <div class="input-group">
                            <textarea asp-for="Description" class="form-control" placeholder="Event Description" rows="4" style="padding-left: 2.75rem;"></textarea>
                            <i class="fa-solid fa-align-left" style="top: 25px;"></i>
                        </div>
                        <div class="input-group">
                            <input asp-for="EventDateTime" class="form-control" type="datetime-local" required />
                            <i class="fa-solid fa-calendar-days"></i>
                        </div>
                        <div class="input-group">
                            <input asp-for="MaxParticipants" class="form-control" type="number" placeholder="Max Participants" required />
                            <i class="fa-solid fa-users"></i>
                        </div>
                        <div class="input-group">
                            <input asp-for="Fees" class="form-control" type="number" step="0.01" placeholder="Registration Fee ($)" required />
                            <i class="fa-solid fa-dollar-sign"></i>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg mt-3">Submit for Approval</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}