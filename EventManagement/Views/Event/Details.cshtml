@model EventManagement.Models.Event

@{
    ViewData["Title"] = Model.Title;
    var spotsLeft = Model.MaxParticipants - Model.Registrations.Count();
}

<div class="container my-5">
    
    @if (TempData["Notification"] != null)
    {
        <div class="alert alert-danger">@TempData["Notification"]</div>
    }

    <div class="event-details-hero">
        <h1>@Model.Title</h1>
        <p>
            <i class="fa-regular fa-calendar"></i> @Model.EventDateTime.ToString("dddd, dd MMMM yyyy 'at' h:mm tt")
        </p>
    </div>

    <div class="event-details-body">
        <div class="event-details-main">
            <h2>About this Event</h2>
            <p>@Model.Description</p>
            <h4 class="mt-4">Venue</h4>
            <p>@Model.Venue</p>
        </div>
        <div class="event-details-sidebar">
            <div class="sidebar-card">
                <h3>Hosted By</h3>
                <p>@Model.Creator.FullName</p>
                <hr />
                <h3>Spots Left</h3>
                <p>@spotsLeft of @Model.MaxParticipants</p>
                <hr />
                
                @if (Context.Session.GetInt32("UserId") != null)
                {
                    if (spotsLeft > 0)
                    {
                        <a asp-action="Register" asp-route-id="@Model.EventId" class="btn btn-primary w-100">
                            Register Now
                        </a>
                    }
                    else
                    {
                        <button class="btn btn-secondary w-100" disabled>Sold Out</button>
                    }
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-primary w-100">Login to Register</a>
                }
            </div>
        </div>
    </div>
</div>