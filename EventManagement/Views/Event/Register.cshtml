@model EventManagement.ViewModels.RegistrationViewModel

@{
    ViewData["Title"] = "Confirm Registration";
}

<div class="container">
    <div class="form-card" style="max-width: 600px; margin-top: 2rem;">
        <h1 style="text-align:center;">Confirm Your Registration</h1>

        <div class="registration-summary">
            <h3>Event: @Model.EventTitle</h3>
            <div class="detail-item">
                <label>Attendee</label>
                <span>@Model.UserFullName</span>
            </div>
            <div class="detail-item">
                <label>Email</label>
                <span>@Model.UserEmail</span>
            </div>
            <div class="detail-item fee">
                <label>Registration Fee</label>
                <span>$@Model.EventFees.ToString("F2")</span>
            </div>
        </div>

        <form asp-action="Register" method="post" style="margin-top: 2rem;">
            <input type="hidden" asp-for="EventId" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="PaymentMethod">Payment Method</label>
                <select asp-for="PaymentMethod" class="form-control">
                    <option value="">-- Select a Method --</option>
                    <option value="CreditCard">Credit Card</option>
                    <option value="PayPal">PayPal</option>
                    <option value="CollegeWallet">College Wallet</option>
                </select>
                <span asp-validation-for="PaymentMethod" class="validation-error"></span>
            </div>

            <p style="font-size: 0.8rem; color: var(--text-secondary); text-align:center; margin-top:1rem;">
                Note: This is a demo. No real payment will be processed.
            </p>

            <button type="submit" class="btn btn-primary" style="width:100%; margin-top: 1rem;">Confirm & Pay</button>
        </form>
    </div>
</div>
