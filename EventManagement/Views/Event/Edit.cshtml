@model EventManagement.ViewModels.EventViewModel
@{
    ViewData["Title"] = "Edit Event";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card bg-dark text-white">
                <div class="card-body p-4 p-md-5">
                    <h1 class="card-title text-center mb-4">Edit Event</h1>
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="EventId" />
                        
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label"></label>
                            <input asp-for="Title" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Venue" class="form-label"></label>
                            <input asp-for="Venue" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" />
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="EventDateTime" class="form-label"></label>
                                <input asp-for="EventDateTime" class="form-control" type="datetime-local" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxParticipants" class="form-label"></label>
                                <input asp-for="MaxParticipants" class="form-control" type="number" />
                            </div>
                        </div>
                         <div class="mb-3">
                            <label asp-for="Fees" class="form-label"></label>
                            <input asp-for="Fees" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="d-grid">
                             <button type="submit" class="btn btn-primary btn-lg mt-3">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
