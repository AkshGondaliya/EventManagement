@model EventManagement.ViewModels.ViewTicketViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Your Ticket for @Model.EventTitle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .ticket {
            width: 800px;
            height: 350px;
            margin: 50px auto;
            background-color: white;
            border: 1px solid #dee2e6;
            border-radius: 15px;
            display: flex;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .ticket-main {
            padding: 30px;
            flex-grow: 1;
            border-right: 2px dashed #dee2e6;
        }

        .ticket-side {
            width: 250px;
            padding: 30px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .ticket-event-title {
            font-size: 2rem;
            font-weight: 700;
            color: #343a40;
        }

        .ticket-label {
            font-size: 0.8rem;
            color: #6c757d;
            text-transform: uppercase;
        }

        .ticket-value {
            font-size: 1.1rem;
            font-weight: 600;
        }

        .qr-code {
            width: 150px;
            height: 150px;
            background-color: #e9ecef;
        }
    </style>
</head>
<body>
    <div class="ticket">
        <div class="ticket-main">
            <p class="ticket-label">You are confirmed for</p>
            <h1 class="ticket-event-title">@Model.EventTitle</h1>
            <hr class="my-4">
            <div class="row">
                <div class="col-6">
                    <p class="ticket-label">Attendee</p>
                    <p class="ticket-value">@Model.AttendeeName</p>
                </div>
                <div class="col-6">
                    <p class="ticket-label">Date & Time</p>
                    <p class="ticket-value">@Model.EventDate.ToString("dd MMM yyyy, h:mm tt")</p>
                </div>
                <div class="col-6">
                    <p class="ticket-label">Venue</p>
                    <p class="ticket-value">@Model.Venue</p>
                </div>
                <div class="col-6">
                    <p class="ticket-label">Registration ID</p>
                    <p class="ticket-value">#@Model.RegistrationId.ToString("D6")</p>
                </div>
            </div>
        </div>
        <div class="ticket-side">
            <p class="ticket-label">Scan at entry</p>
            <img src="@Model.QrCodeImageUrl" class="qr-code" alt="Ticket QR Code" />
            <p class="mt-2" style="font-size: 0.8rem;">EVENTFLOW</p>
        </div>
    </div>
    <div class="text-center mt-4">
        @* <a href="@Url.Action("DownloadTicket", new { id = Model.RegistrationId })" class="btn btn-primary">Download as PDF</a> *@
        <button onclick="window.print()" class="btn btn-secondary">Print Ticket</button>
    </div>
</body>
</html>