@using Microsoft.AspNetCore.Http
@using System.Linq
@inject EventManagement.Data.AppDbContext DbContext
@inject IHttpContextAccessor HttpContextAccessor

@{
    var showMyEventsLink = false;
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    if (userId != null)
    {
        // Check if the user has any approved events they created
        showMyEventsLink = DbContext.Events.Any(e => e.CreatedBy == userId && e.Status == "Approved");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventFlow</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="main-header">
        <nav class="navbar">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">EventFlow</a>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Event" asp-action="Index">Events</a>
                </li>

                @if (userId != null)
                {
                    <li class="nav-item dropdown">
                        @{
                            var profilePic = HttpContextAccessor.HttpContext.Session.GetString("ProfilePictureUrl");
                            var avatarSrc = string.IsNullOrEmpty(profilePic) ? "/images/default-avatar.png" : profilePic;
                        }
                        <a href="#" class="dropdown-toggle profile-dropdown">
                            <img src="@avatarSrc" class="navbar-avatar" alt="User Avatar" />
                        </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile</a>
                            @if (showMyEventsLink)
                            {
                                <a class="dropdown-item" asp-controller="Event" asp-action="MyCreatedEvents">My Events</a>
                            }
                            <a class="dropdown-item" asp-controller="Event" asp-action="MyRegistrations">My Registrations</a>

                            @if (Context.Session.GetString("Role") == "Admin")
                            {
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item admin-link" asp-controller="Admin" asp-action="UserManagement">User Management</a>
                                <a class="dropdown-item admin-link" asp-controller="Admin" asp-action="EventApproval">Event Approval</a>
                            }
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Login</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>
                    </li>
                }
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="main-footer">
        <div class="container">
            &copy; @DateTime.Now.Year - EventFlow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>