@using Microsoft.AspNetCore.Http

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventFlow</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="main-header">
        <nav class="navbar">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">EventFlow</a>

            <ul class="navbar-nav">
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Event" asp-action="Index">Events</a>
                </li>

                @if (!string.IsNullOrEmpty(Context.Session.GetString("FullName")))
                {
                    <li class="nav-item">
                        <a asp-controller="Event" asp-action="Create" class="btn btn-primary">Create Event</a>
                    </li>
                    <li class="nav-item user-name">
                        Hi, @Context.Session.GetString("FullName")
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Logout" class="btn btn-secondary">Logout</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-secondary">Login</a>
                    </li>
                    <li class="nav-item">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary">Register</a>
                    </li>
                }
            </ul>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="main-footer">
        <div class="container">
            &copy; @DateTime.Now.Year - EventFlow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (TempData["Notification"] != null)
    {
        <div id="toastNotification" class="toast-notification">
            @TempData["Notification"]
        </div>

        <script>
            // Show the toast notification
            const toast = document.getElementById('toastNotification');
            if (toast) {
                // Add 'show' class to slide it in
                setTimeout(() => {
                    toast.classList.add('show');
                }, 100); // Small delay to ensure transition works on page load

                // Hide the toast after 5 seconds
                setTimeout(() => {
                    toast.classList.remove('show');
                }, 5000);
            }
        </script>
    }
</body>
</html>