@using Microsoft.AspNetCore.Http
@using System.Linq
@inject EventManagement.Data.AppDbContext DbContext
@inject IHttpContextAccessor HttpContextAccessor

@{
    var showMyEventsLink = false;
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    if (userId != null)
    {
        // Check if the user has any approved events they created
        showMyEventsLink = DbContext.Events.Any(e => e.CreatedBy == userId && e.Status == "Approved");
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventFlow</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">EventFlow</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Event" asp-action="Index">Events</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (userId != null)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="@(HttpContextAccessor.HttpContext.Session.GetString("ProfilePictureUrl") ?? "/images/default-avatar.png")" class="navbar-avatar" alt="User Avatar" />
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Profile">Profile</a></li>
                                    @if (showMyEventsLink)
                                    {
                                        <li><a class="dropdown-item" asp-controller="Event" asp-action="MyCreatedEvents">My Events</a></li>
                                    }
                                    <li><a class="dropdown-item" asp-controller="Event" asp-action="MyRegistrations">My Registrations</a></li>
                                    @if (Context.Session.GetString("Role") == "Admin")
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="UserManagement">User Management</a></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="EventApproval">Event Approval</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-outline-light me-2" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="main-footer">
        <div class="container">
            &copy; @DateTime.Now.Year - EventFlow - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>