@model IEnumerable<EventManagement.Models.Event>

@{
    ViewData["Title"] = "Event Approval";
}

<div class="container my-5">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">Event Approval</h1>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Date</th>
                        <th>Requested By</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ev in Model)
                    {
                        <tr>
                            <td>@ev.Title</td>
                            <td>@ev.EventDateTime.ToString("g")</td>
                            <td>@ev.Creator.FullName</td>
                            <td class="text-end">
                                <form asp-action="ApproveEvent" method="post" class="d-inline">
                                    <input type="hidden" name="eventId" value="@ev.EventId" />
                                    <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                </form>
                                 <form asp-action="RejectEvent" method="post" class="d-inline">
                                    <input type="hidden" name="eventId" value="@ev.EventId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>