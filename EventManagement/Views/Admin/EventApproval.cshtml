@model IEnumerable<EventManagement.Models.Event>

@{
    ViewData["Title"] = "Event Approval";
}

<div class="container">
    <div class="form-card" style="max-width: 1000px; margin-top: 2rem;">
        <h1 style="text-align:center;">Event Approval</h1>
        <p style="text-align:center; color: var(--text-secondary);">Review and approve or reject new event requests.</p>

        <table class="table" style="margin-top: 2rem; color: var(--text-primary);">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Requested By</th>
                    <th style="text-align:right;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ev in Model)
                {
                    <tr>
                        <td>@ev.Title</td>
                        <td>@ev.EventDateTime.ToString("g")</td>
                        <td>@ev.Creator.FullName</td>
                        <td style="text-align:right;">
                            <form asp-action="ApproveEvent" method="post" style="display:inline;">
                                <input type="hidden" name="eventId" value="@ev.EventId" />
                                <button type="submit" class="btn btn-primary" style="padding: 0.4rem 0.8rem;">Approve</button>
                            </form>
                            <form asp-action="RejectEvent" method="post" style="display:inline; margin-left: 5px;">
                                <input type="hidden" name="eventId" value="@ev.EventId" />
                                <button type="submit" class="btn btn-secondary" style="padding: 0.4rem 0.8rem;">Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 