@model IEnumerable<EventManagement.Models.Event>

@{
    ViewData["Title"] = "Event Approval";
}

<div class="container my-5">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">Event Approval</h1>
            
            @if (Model.Any())
            {
                <table class="table table-dark table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Requested By</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ev in Model)
                        {
                            <tr>
                                <td>@ev.Title</td>
                                <td>@ev.EventDateTime.ToString("g")</td>
                                <td>@ev.Creator.FullName</td>
                                <td class="text-end">
                                    <a asp-action="EventApprovalDetails" asp-route-id="@ev.EventId" class="btn btn-outline-light btn-sm">View Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-center text-white mt-4">There are no pending event requests to review.</p>
            }
        </div>
    </div>
</div>