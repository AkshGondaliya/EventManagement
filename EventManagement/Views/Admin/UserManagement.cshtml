@model IEnumerable<EventManagement.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container my-5">
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">User Management</h1>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Current Role</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>