@model IEnumerable<EventManagement.Models.User>

@{
    ViewData["Title"] = "User Management";
}

<div class="container my-5">
    @if (TempData["ExceptionNotification"] != null)
    {
        <div class="alert alert-danger">@TempData["ExceptionNotification"]</div>
    }
    @if (TempData["SuccessNotification"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessNotification"]</div>
    }
    @if (TempData["Notification"] != null)
    {
        <div class="alert alert-info">@TempData["Notification"]</div>
    }
    <div class="card bg-dark text-white">
        <div class="card-body">
            <h1 class="card-title text-center mb-4">User Management</h1>
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Current Role</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td class="text-end">
                                <form asp-action="DeleteUser" method="post" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <input type="hidden" name="userId" value="@user.UserId" />
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>